<?xml version='1.0' encoding='utf-8'?>
<widget id="com.polar.hydraria" version="0.0.8" xmlns="www.w3.org" xmlns:cdv="cordova.apache.org" xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- App Info -->
    <name>Hydraria</name>
    <description>Juego de aventuras h√≠dricas, hecho en jquery mobile, alpine y p5</description>
    <author>Gabs</author>

    <!-- Main Entry Point -->
    <content src="index.html" />

    <!-- Security & Access (Required for modern Android) -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <!-- Android Specific Settings -->
    <edit-config target="application" file="app/src/main/AndroidManifest.xml" mode="merge">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    <platform name="android">
        <preference name="android-minSdkVersion" value="21" />
        <preference name="android-targetSdkVersion" value="36" />
        <preference name="android-compileSdkVersion" value="36" /><!-- Required for 2025 -->
        <allow-intent href="market:*" />
        
        <!-- Enable Splash Screen and Fullscreen -->
        <preference name="Fullscreen" value="true" />
        <preference name="Orientation" value="landscape" />
        <config-file target="AndroidManifest.xml" parent="/*">
        <uses-permission name="android.permission.INTERNET" />
        <uses-permission name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
        <uses-permission name="android.permission.CAMERA" />
        <uses-permission name="android.permission.FLASHLIGHT" />
    </config-file>
    </platform>

    <!-- Cordova Plugins -->
    <plugin name="cordova-plugin-networkinterface" spec="~2.0.0" />
    <plugin name="cordova-plugin-websocket-server" spec="~1.5.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~8.1.0" />
</widget>
